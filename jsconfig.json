{
    "compilerOptions": {
      "module": "commonjs",
      "target": "es2017",
      "jsx": "react",
      "allowSyntheticDefaultImports": true,
      "baseUrl": ".",
      "paths": {
        "@components/*": ["./src/components/*"],
        "@assets/*": ["./src/assets/*"],
        "@modules/*": ["./src/modules/*"],
        "@pages/*": ["./src/pages/*"],
        "@context/*": ["./src/context/*"],
        "@api/*": ["./src/api/*"],
        "@src/*": ["./src/*"]
      }
    },
    "exclude": ["node_modules", "dist", ".cache", "bundles", "out"],
    "include": ["build/**/*", "server/**/*", "e2e/**/*", "src/**/*", "stories/**/*"]
  }
